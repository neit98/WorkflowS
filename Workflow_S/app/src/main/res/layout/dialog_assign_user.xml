<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WHO'S WORKING ON..."
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        android:fontFamily="@font/avenir_heavy"
        android:background="@drawable/background_textview_dialog"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_assign_user"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="20dp"
        android:nestedScrollingEnabled="true">
    </androidx.recyclerview.widget.RecyclerView>


    <AutoCompleteTextView
        android:id="@+id/edt_user_email_for_assigning"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:fontFamily="@font/avenir_heavy"
        android:background="@drawable/edittext_rounded"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Email"
        android:textColor="@color/colorPrimaryText"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/bt_add_user"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Add"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/avenir_heavy"
            android:background="@drawable/button_radius_dark"
            android:layout_marginHorizontal="5dp" />

        <Button
            android:id="@+id/bt_cancel_add"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryText"
            android:fontFamily="@font/avenir_heavy"
            android:background="@drawable/button_radius_gray"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>

</LinearLayout>

