<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal"
    android:layout_gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_alert_dialog_light_blue">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/team_large_ic"
            android:layout_gravity="center"
            android:paddingVertical="22dp" />

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_assign_user"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:paddingRight="40dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="20dp"
        android:nestedScrollingEnabled="true">
    </androidx.recyclerview.widget.RecyclerView>


    <AutoCompleteTextView
        android:id="@+id/edt_user_email_for_assigning"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:fontFamily="@font/avenir_heavy"
        android:background="@drawable/edittext_rounded"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Email"
        android:textColor="@color/colorPrimaryText"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="OK"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="@font/avenir_heavy"
            android:background="@drawable/button_radius_light_blue"
            android:layout_marginHorizontal="5dp"
            android:visibility="gone"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/bt_add_user"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Add"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:fontFamily="@font/avenir_heavy"
                android:background="@drawable/button_radius_light_blue"
                android:layout_marginHorizontal="5dp" />

            <Button
                android:id="@+id/bt_cancel_add"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Cancel"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryText"
                android:fontFamily="@font/avenir_heavy"
                android:background="@drawable/button_radius_gray"
                android:layout_marginHorizontal="5dp"/>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>

