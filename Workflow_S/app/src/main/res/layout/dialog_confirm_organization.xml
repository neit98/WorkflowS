<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_radius"
    android:id="@+id/dialog_error">

    <TextView
        android:paddingVertical="15dp"
        android:fontFamily="@font/avenir_medium"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Confirmation required!"
        android:textColor="#fafafa"
        android:background="@drawable/textview_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="@font/avenir_light"
        android:text="Are you sure switching to another organization?"
        android:lines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <Button
            android:fontFamily="@font/avenir_medium"
            android:id="@+id/btn_confirm"
            android:layout_width="80dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:text="OK"
            android:textColor="#fafafa"
            android:layout_height="40dp"
            android:background="@drawable/button_radius_red"/>

        <Button
            android:fontFamily="@font/avenir_medium"
            android:id="@+id/btn_cancel"
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:text="Cancel"
            android:textColor="#fafafa"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:background="@drawable/button_radius_dark_gray"/>

    </LinearLayout>


</LinearLayout>