<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_radius"
    android:id="@+id/dialog_error">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_alert_dialog_light_blue">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/organization_confirm_ic"
            android:layout_gravity="center"
            android:paddingVertical="22dp" />

    </FrameLayout>

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="@font/avenir_light"
        android:text="Are you sure switching to another organization?"
        android:lines="3"
        android:textColor="@color/colorPrimaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:gravity="center_horizontal">

        <Button
            android:fontFamily="@font/avenir_medium"
            android:id="@+id/btn_confirm"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:text="OK"
            android:layout_marginHorizontal="20dp"
            android:textColor="#fafafa"
            android:layout_height="40dp"
            android:background="@drawable/button_radius_light_blue"/>

        <Button
            android:fontFamily="@font/avenir_medium"
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:text="Cancel"
            android:textColor="#fafafa"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:background="@drawable/button_radius_dark_gray"/>

    </LinearLayout>


</LinearLayout>