<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_radius"
    android:id="@+id/dialog_error">

    <TextView
        android:padding="5dp"
        android:fontFamily="@font/avenir_medium"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="22sp"
        android:text="Error"
        android:textColor="#fafafa"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="@font/avenir_light"
        android:text="You didn't assigned this task ! You can't see content detail of this."
        android:lines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:text="OK"
        android:textColor="#fafafa"
        android:layout_height="wrap_content"
        android:background="@drawable/button_radius_dark"/>

</LinearLayout>