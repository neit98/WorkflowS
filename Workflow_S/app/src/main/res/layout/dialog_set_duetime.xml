<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SET DUE TIME"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        android:fontFamily="@font/avenir_heavy"
        android:background="@drawable/background_textview_dialog"
        android:gravity="center"/>
    
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext_rounded"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/10/2019"
            android:textColor="@color/colorPrimaryText"
            android:fontFamily="@font/avenir_heavy"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/bt_setdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/set_date_ic"
            android:background="@android:color/transparent"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext_rounded"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 PM"
            android:textColor="@color/colorPrimaryText"
            android:fontFamily="@font/avenir_heavy"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/bt_settime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/set_time_ic"
            android:background="@android:color/transparent"
            android:layout_marginRight="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/bt_save_time"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/avenir_heavy"
            android:background="@drawable/button_radius_dark"
            android:layout_marginHorizontal="5dp" />

        <Button
            android:id="@+id/bt_cancel_save"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryText"
            android:fontFamily="@font/avenir_heavy"
            android:background="@drawable/button_radius_gray"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>

</LinearLayout>

