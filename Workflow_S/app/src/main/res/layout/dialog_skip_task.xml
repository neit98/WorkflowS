<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_radius"
    android:id="@+id/dialog_error">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_alert_dialog_red">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/permission_warning_ic"
            android:layout_gravity="center"
            android:paddingVertical="22dp" />

    </FrameLayout>


    <TextView
        android:id="@+id/tv_error_message"
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="@font/avenir_heavy"
        android:text="You want to skip this task? "
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        android:textSize="17dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:gravity="center_horizontal">

        <Button
            android:fontFamily="@font/avenir_medium"
            android:id="@+id/btn_ok"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:text="Yes"
            android:textColor="#fafafa"
            android:layout_height="40dp"
            android:background="@drawable/button_radius_red"/>

        <Button
            android:fontFamily="@font/avenir_heavy"
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_marginHorizontal="20dp"
            android:textColor="#fafafa"
            android:layout_height="40dp"
            android:background="@drawable/button_radius_dark_gray"/>

    </LinearLayout>

</LinearLayout>