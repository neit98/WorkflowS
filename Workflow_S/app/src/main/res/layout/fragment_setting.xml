<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/tv_switch_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_light"
        android:text="Notification"
        android:textSize="20sp"
        android:drawableLeft="@mipmap/notif_ic_dark"
        android:drawablePadding="30dp"
        android:background="@drawable/background_item_white_radius"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="16dp"/>

    <TextView
        android:id="@+id/tv_third_libraries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_light"
        android:text="Third-party libraries"
        android:textSize="20sp"
        android:drawableLeft="@mipmap/third_party_ic"
        android:drawablePadding="20dp"
        android:paddingVertical="16dp"
        android:background="@drawable/background_item_white_radius"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="40dp"/>

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_light"
        android:text="About"
        android:paddingVertical="16dp"
        android:textSize="20sp"
        android:drawableLeft="@mipmap/about_ic"
        android:drawablePadding="20dp"
        android:background="@drawable/background_item_white_radius"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="40dp"/>




</LinearLayout>