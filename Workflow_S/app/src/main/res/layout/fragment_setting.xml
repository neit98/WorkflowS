<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_switch_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_heavy"
            android:text="Notification"
            android:textSize="20dp"
            android:drawableLeft="@mipmap/notif_ic_dark"
            android:drawablePadding="30dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"

            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_third_libraries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_heavy"
            android:text="Third-party libraries"
            android:textSize="20dp"
            android:drawableLeft="@mipmap/third_party_ic"
            android:drawablePadding="20dp"
            android:paddingVertical="16dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="40dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_heavy"
            android:text="About"
            android:paddingVertical="16dp"
            android:textSize="20dp"
            android:drawableLeft="@mipmap/about_ic"
            android:drawablePadding="20dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="40dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quesha"
        android:text="Workflow S!"
        android:paddingVertical="16dp"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="40dp"/>

</LinearLayout>