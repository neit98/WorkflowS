<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Toolbar">
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/avenir_light</item>
        <item name="android:textSize">20dp</item>
    </style>


    <!--navigation drawer style-->
    <style name="NavigationViewItem">
        <item name="android:fontFamily">@font/avenir_light</item>
        <item name="android:textSize">22dp</item>
    </style>


</resources>
